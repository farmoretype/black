local function simplify(part)
    if part:IsA("BasePart") then
        part.Material = Enum.Material.Plastic
        part.Color = Color3.fromRGB(0, 0, 0)
        part.Reflectance = 0
        part.CastShadow = false
    elseif part:IsA("Decal") or part:IsA("Texture") then
        part:Destroy()
    elseif part:IsA("ParticleEmitter") or part:IsA("Trail") or part:IsA("Beam") then
        part:Destroy()
    elseif part:IsA("PointLight") or part:IsA("SpotLight") or part:IsA("SurfaceLight") then
        part:Destroy()
    elseif part:IsA("Smoke") or part:IsA("Fire") then
        part:Destroy()
    end
end

local function simplifyAll()
    for _, descendant in ipairs(workspace:GetDescendants()) do
        simplify(descendant)
    end
end

workspace.DescendantAdded:Connect(simplify)
simplifyAll()
